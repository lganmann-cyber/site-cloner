{
  "version": 2,
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api" },
    { "source": "/", "destination": "/api" },
    { "source": "/index.html", "destination": "/api" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 60
    }
  }
}
